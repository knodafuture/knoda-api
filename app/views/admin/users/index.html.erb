<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Email</th>
      <th>Points</th>
      <th>Predictions count</th>
      <th>View account</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.points %></td>
        <td><%= user.predictions.count %></td>
        <td><%= link_to "View", [:admin, user] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>